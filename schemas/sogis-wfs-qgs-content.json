{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/simi-so/json2qgs/raw/master/schemas/sogis-wfs-qgs-content.json",
  "title": "SOGIS json2qgs data",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "JSON Schema",
      "description": "Reference to JSON schema of this document",
      "type": "string",
      "format": "uri",
      "default": "https://github.com/simi-so/json2qgs/raw/master/schemas/sogis-wfs-qgs-content.json"
    },
    "layers": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/vector_layer"
          }
        ]
      }
    },
    "wfs_metadata": {
      "title": "Metadata for WFS GetCapabilities",
      "type": "object",
      "properties": {
        "service_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "service_title": {
          "type": [
            "string",
            "null"
          ]
        },
        "service_abstract": {
          "type": [
            "string",
            "null"
          ]
        },
        "keywords": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "online_resource": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "fees": {
          "type": [
            "string",
            "null"
          ]
        },
        "access_constraints": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  },
  "definitions": {
    "vector_layer": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "layer"
        },
        "title": {
          "description": "Layer title",
          "type": "string"
        },
        "datatype": {
          "description": "Data type",
          "type": "string",
          "const": "vector"
        },
        "postgis_datasource": {
          "type": "object",
          "properties": {
            "dbconnection": {
              "type": "string"
            },
            "schema": {
              "type": "string"
            },
            "table": {
              "type": "string"
            },
            "unique_key": {
              "type": "string"
            },
            "geometry_field": {
              "type": "string"
            },
            "geometry_type": {
              "type": "string",
              "enum": [
                "POINT",
                "LINESTRING",
                "POLYGON",
                "MULTIPOINT",
                "MULTILINESTRING",
                "MULTIPOLYGON"
              ]
            },
            "srid": {
              "type": "integer"
            }
          },
          "required": [
            "dbconnection",
            "schema",
            "table",
            "unique_key",
            "geometry_field",
            "geometry_type",
            "srid"
          ]
        },
        "filter": {
          "title": "QGIS object filter",
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Attribute name",
                "type": "string"
              },
              "alias": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          }
        },
        "bbox": {
          "$ref": "#/definitions/bbox"
        },
        "srid": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "datatype",
        "postgis_datasource"
      ]
    },
    "bbox": {
      "title": "Bounding box",
      "type": "object",
      "properties": {
        "bounds": {
          "description": "Extent as [minx, miny, maxx, maxy]",
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4
        },
        "srid": {
          "type": "integer"
        }
      }
    }
  }
}